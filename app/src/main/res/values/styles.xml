<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style to be used on ImageView -->
    <style name="ImageView">
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Style to be used on recipe title -->
    <style name="Title" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/layout_vertical_padding</item>
    </style>

    <style name="Subtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/layout_vertical_padding</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/layout_vertical_padding</item>
    </style>

    <style name="TabTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimaryChild</item>
     <!--    <item name="app:tabTextColor">@android:color/primary_text_light</item> -->
    </style>
</resources>
